{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "client/(.*)",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/.*",
      "dest": "server.js"
    },
    {
      "src": "/(.*)",
      "dest": "client/index.html"
    }
  ],
  "env": {
    "MONGODB_URI": "`mongodb+srv://${MongoDB_USERID}:${MONGODB_PASSWORD}@cluster0.9o6eros.mongodb.net/food_items?retryWrites=true&w=majority`",
   
  }
}

